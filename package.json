{
  "name": "MemeGenerator",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "yarn react-native run-android",
    "bootstrap": "./scripts/bootstrap.sh",
    "clean:all": "yarn clean:watchman && yarn clean:builds && yarn clean:cache && yarn clean:gradle && yarn clean:packages",
    "clean:gradle": "cd android && ./gradlew clean && cd ..",
    "clean:builds": "rm -rf ios/build android/build android/app/build",
    "clean:cache": "rm -fr $TMPDIR/react-* $TMPDIR/haste-map-react-native-packager-* ~/.rncache; watchman watch-del-all",
    "clean:packages": "rm -rf node_modules && yarn install",
    "coverage": "open coverage/lcov-report/index.html",
    "ios": "yarn react-native run-ios --simulator='iPhone 11'",
    "lint": "eslint --ext '.ts,.tsx' .",
    "typescript": "tsc --noEmit",
    "postinstall": "./scripts/postinstall.sh",
    "start": "react-native start",
    "test": "jest -u",
    "test:ci": "jest --coverage --runInBand --detectOpenHandles",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@react-native-community/async-storage": "1.6.2",
    "@react-native-community/masked-view": "0.1.1",
    "@react-native-firebase/analytics": "6.0.2",
    "@react-native-firebase/app": "6.0.2",
    "@react-native-firebase/crashlytics": "6.0.2",
    "@react-native-firebase/perf": "6.0.2",
    "@react-navigation/bottom-tabs": "5.0.0-alpha.14",
    "@react-navigation/core": "5.0.0-alpha.16",
    "@react-navigation/native": "5.0.0-alpha.12",
    "@react-navigation/stack": "5.0.0-alpha.27",
    "color": "3.1.2",
    "fuse.js": "3.4.5",
    "i18n-js": "3.3.0",
    "lodash": "4.17.15",
    "react": "16.9.0",
    "react-native": "0.61.2",
    "react-native-fast-image": "7.0.2",
    "react-native-fs": "2.16.1",
    "react-native-gesture-handler": "1.4.1",
    "react-native-image-picker": "1.1.0",
    "react-native-localize": "1.3.1",
    "react-native-reanimated": "1.3.0",
    "react-native-redash": "8.2.0",
    "react-native-safe-area-context": "0.5.0",
    "react-native-screens": "2.0.0-alpha.5",
    "react-native-share": "2.0.0",
    "react-native-vector-icons": "6.6.0",
    "react-native-view-shot": "3.0.2",
    "use-memo-one": "1.1.1"
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@types/jest": "24.0.19",
    "@types/lodash": "4.14.144",
    "@types/react": "16.9.9",
    "@types/react-native": "0.60.21",
    "@types/react-native-share": "1.1.4",
    "@types/react-test-renderer": "16.9.0",
    "babel-jest": "24.9.0",
    "babel-plugin-lodash": "3.3.4",
    "babel-plugin-module-resolver": "3.2.0",
    "codecov": "3.6.1",
    "eslint": "6.5.1",
    "eslint-config-satya164": "3.1.2",
    "eslint-plugin-sort-imports-es6-autofix": "0.5.0",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "jetifier": "1.6.4",
    "lint-staged": "9.4.2",
    "metro-react-native-babel-preset": "0.56.0",
    "prettier": "1.18.2",
    "react-test-renderer": "16.9.0",
    "typescript": "3.7.0-beta"
  },
  "jest": {
    "preset": "react-native",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/jest/setup.js",
      "<rootDir>/node_modules/react-native-gesture-handler/jestSetup.js",
      "<rootDir>/node_modules/react-native-reanimated/mock.js",
      "<rootDir>/jest/__mocks__/react-native-reanimated.mock.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation)"
    ],
    "testPathIgnorePatterns": [
      "__e2e__",
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn typescript"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --ext ',.js,.ts,.tsx'",
      "git add"
    ]
  }
}
